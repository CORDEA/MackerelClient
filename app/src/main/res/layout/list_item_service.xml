<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_cell_height"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/list_item_service_padding_side"
        android:paddingRight="@dimen/list_item_service_padding_side">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_text_view"
                style="@style/ListText.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/list_item_service_role_max_width"
                android:gravity="center_vertical"
                android:text="@string/na_text" />

            <TextView
                android:id="@+id/role_text_view"
                style="@style/ListText.Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:maxWidth="@dimen/list_item_service_role_max_width"
                android:text="@string/na_text" />
        </FrameLayout>

        <TextView
            android:id="@+id/detail_text_view"
            style="@style/ListText.Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/na_text" />

    </LinearLayout>
</layout>
