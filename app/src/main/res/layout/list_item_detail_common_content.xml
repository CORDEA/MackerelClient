<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_cell_height"
        android:layout_marginLeft="@dimen/list_item_detail_margin_left">

    <LinearLayout
            android:layout_marginRight="@dimen/list_item_detail_margin_right"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/title"
                style="@style/ListText.Title"
                android:text="@string/na_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/detail"
                android:text="@string/na_text"
                style="@style/ListText.Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:id="@+id/divider"
            style="@style/DividerDefault"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_divider_height"/>
</FrameLayout>
