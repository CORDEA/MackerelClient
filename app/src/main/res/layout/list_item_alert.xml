<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_cell_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/list_item_alert_margin_side"
            android:layout_marginRight="@dimen/list_item_alert_margin_side">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_text_view"
                    style="@style/ListText.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/na_text" />

                <TextView
                    android:id="@+id/detail_text_view"
                    style="@style/ListText.Detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/na_text" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>
