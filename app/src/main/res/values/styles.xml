<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="IconActive">
        <item name="android:alpha">0.54</item>
    </style>

    <style name="IconInActive">
        <item name="android:alpha">0.26</item>
    </style>

    <style name="ListText">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListText.Title" parent="ListText">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="ListText.Detail" parent="ListText">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="CardDefault" parent="CardView">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="DividerDefault">
        <item name="android:background">@android:color/black</item>
        <item name="android:alpha">0.12</item>
    </style>

    <style name="LicenseTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="LicenseContent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="HostMetricUnit">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>
</resources>
